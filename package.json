{
  "private": true,
  "name": "tinvesta-app",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "commitlint": "commitlint --from=HEAD~1",
    "dev": "next dev",
    "format": "yarn prettier --write",
    "format:check": "yarn prettier --check",
    "gcb": "bash ./scripts/shell/git-create-branch.sh",
    "gcdwp": "bash ./scripts/shell/git-checkout-develop-with-pull.sh",
    "gpc": "bash ./scripts/shell/git-push-changes.sh",
    "grlc": "bash ./scripts/shell/git-reset-local-changes.sh",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "reinstall-node-modules": "bash ./scripts/shell/reinstall-node-modules.sh",
    "start": "next start",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|json)\"",
    "typecheck": "tsc --noEmit -p . --pretty"
  },
  "dependencies": {
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "^11.8.2",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/montserrat": "^4.5.5",
    "@fontsource/raleway": "^4.5.3",
    "@mui/icons-material": "^5.5.1",
    "@mui/material": "^5.5.1",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.2",
    "eslint-config-next": "12.1.0",
    "eslint-plugin-folders": "^1.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.6",
    "prettier": "^2.6.0",
    "prettier-package-json": "^2.6.3",
    "typescript": "4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "./scripts/shell/post-merge-hook.sh"
    }
  },
  "volta": {
    "node": "16.14.1",
    "yarn": "1.22.17"
  }
}
